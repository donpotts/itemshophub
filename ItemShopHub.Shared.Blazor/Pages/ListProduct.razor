                    var avgRating = reviews.Any(r => r.Rating.HasValue) 
                        ? (decimal)reviews.Where(r => r.Rating.HasValue).Average(r => r.Rating!.Value)
                        : (decimal?)null;
                    var reviewCount = reviews.Count;
                }
                
                @if (avgRating.HasValue)
                {
                    <ProductRatingDisplay ProductId="@context.Item.Id!.Value"
                                        AverageRating="@avgRating"
                                        TotalReviews="@reviewCount"
                                        Reviews="@reviews"
                                        ShowBreakdown="true"
                                        StarSize="Size.Small"
                                        RatingTypo="Typo.caption"
                                        CountTypo="Typo.caption" />
                }
