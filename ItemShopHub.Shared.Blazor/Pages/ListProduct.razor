        </TemplateColumn>
        <TemplateColumn Title="Feature" Sortable="false" Filterable="false">
            <CellTemplate>
                @string.Join(", ", context.Item.Feature?.Select(x => x.Name?.ToString() ?? string.Empty) ?? [])
            </CellTemplate>
